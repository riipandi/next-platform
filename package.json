{
  "name": "next-platform",
  "version": "12.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port ${PORT:=3000}",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "next start --port ${PORT:=3000}",
    "export": "next export",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "postinstall": "prisma generate",
    "prisma": "prisma"
  },
  "dependencies": {
    "@fontsource/be-vietnam-pro": "^4.5.2",
    "@fontsource/jetbrains-mono": "^4.5.3",
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.5",
    "@next-auth/prisma-adapter": "^1.0.1",
    "@prisma/client": "^3.8.1",
    "akar-icons": "^1.9.8",
    "array-to-image": "^1.0.0",
    "blurhash": "^1.1.4",
    "clsx": "^1.1.1",
    "cuid": "^2.1.8",
    "date-fns": "^2.28.0",
    "framer-motion": "^6.2.6",
    "fs": "^0.0.1-security",
    "gray-matter": "^4.0.3",
    "js-cookie": "^3.0.1",
    "next-auth": "^4.1.2",
    "next-mdx-remote": "^4.0.0",
    "next-themes": "^0.1.1",
    "next": "12.1.0",
    "plaiceholder": "^2.3.0",
    "react-confetti": "^6.0.1",
    "react-dom": "17.0.2",
    "react-hot-toast": "^2.2.0",
    "react-textarea-autosize": "^8.3.3",
    "react": "17.0.2",
    "remark-mdx": "^2.0.0-rc.2",
    "remark": "^14.0.2",
    "sharp": "^0.30.1",
    "sitemap": "^7.1.1",
    "swr": "^1.2.2",
    "use-debounce": "^7.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/tailwindcss": "^3.0.9",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "autoprefixer": "^10.4.2",
    "clsx": "^1.1.1",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint": "~8.9.0",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "prisma": "^3.10.0",
    "sharp": "^0.30.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "next",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "warn",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@next/next/no-img-element": "off",
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": [
        "warn",
        {
          "groups": [
            [
              "^@?\\w",
              "^\\u0000"
            ],
            [
              "^.+\\.s?css$"
            ],
            [
              "^@/libraries",
              "^@/hooks"
            ],
            [
              "^@/components",
              "^@/styles"
            ],
            [
              "^@/"
            ],
            [
              "^\\./?$",
              "^\\.(?!/?$)",
              "^\\.\\./?$",
              "^\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\./\\.\\.(?!/?$)"
            ],
            [
              "^@/types"
            ],
            [
              "^"
            ]
          ]
        }
      ]
    },
    "globals": {
      "React": true,
      "JSX": true
    }
  },
  "eslintIgnore": [
    ".next", ".cache", "build", "dist", "out"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 110,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  }
}
